@model ResquePet.Models.Animale

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Animale</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="IdAnimale" />
            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="tipoAnimale" class="control-label"></label>
                <input asp-for="tipoAnimale" class="form-control" />
                <span asp-validation-for="tipoAnimale" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="coloreMantello" class="control-label"></label>
                <input asp-for="coloreMantello" class="form-control" />
                <span asp-validation-for="coloreMantello" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="dataNascita" class="control-label"></label>
                <input asp-for="dataNascita" class="form-control" />
                <span asp-validation-for="dataNascita" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="isMicrochipped" /> @Html.DisplayNameFor(model => model.isMicrochipped)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="MicrochipID" class="control-label"></label>
                <input asp-for="MicrochipID" class="form-control" />
                <span asp-validation-for="MicrochipID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IdUtente" class="control-label"></label>
                <select asp-for="IdUtente" class="form-control" asp-items="ViewBag.IdUtente"></select>
                <span asp-validation-for="IdUtente" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
